# =========================
# [PORTFOLIO & RISK]
# =========================
PORTFOLIO_SYMBOLS=BTCUSD,ETHUSD,SOLUSD,PEPEUSD
RISK_CAPITAL_PCT_PER_TRADE=0.10           # 10% of equity risked at SL per trade
RISK_MAX_CONCURRENT_TRADES=2
RISK_DAILY_STOP_PCT=0.25                  # stop trading after -25% daily drawdown
RISK_DAILY_STOP_RESET=utc_midnight        # or hh:mm
RISK_ALLOW_OVERRIDE=false
RISK_OVERRIDE_TOKEN=

# =========================
# [ML GATE]
# =========================
TS_USE_ML_GATE=false
TS_ML_CONF_THR=0.56
TS_ML_WARMUP_BARS=600
TS_ML_CONF_SIZING=false                   # if true, we propose size multiplier based on ml_conf
TS_ML_CONF_SLOPE=1.0                      # sizing slope; 0.5..1.5 sensible

# =========================
# [MANAGEMENT]
# =========================
TS_EXIT_DEGRADE_TIGHTEN=false
TS_EXIT_DEGRADE_DELTA=0.15                # drop in ml_conf to consider 'degrade'
TS_EXIT_DEGRADE_BARS=3                    # consecutive bars to confirm degrade
TS_EXIT_DEGRADE_ATR_MULT=0.50             # tighten SL by this * ATR (additional)

# =========================
# [DATASET]
# =========================
DATASET_ROOT=datasets
DATASET_RETENTION_DAYS=90

# =========================
# [LEDGER]
# =========================
LEDGER_BACKEND=duckdb
LEDGER_PATH=ledger.duckdb

# =========================
# [DELTA EXCHANGE]
# =========================
DELTA_API_KEY=
DELTA_API_SECRET=
DELTA_ENDPOINT=https://api.delta.exchange

# =========================
# [SCHEDULER]
# =========================
RUN_TRAINER_NIGHTLY=true
RUN_DATASET_AUTOLOADER=true

# =========================
# [SIMULATOR]
# =========================
SIMULATOR_START_CAPITAL=10000
SIMULATOR_FEE_PCT=0.0005

# =========================
# [DELTA TIMEFRAMES]
# =========================
DELTA_TIMEFRAME_5M=5m
DELTA_TIMEFRAME_1H=1h
